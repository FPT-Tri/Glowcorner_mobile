<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/routine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/routine_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/apply_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Routine"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Cleanser Section -->
            <TextView
                android:id="@+id/cleanser_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleanser"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cleanser_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Toner Section -->
            <TextView
                android:id="@+id/toner_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toner"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/toner_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Serum Section -->
            <TextView
                android:id="@+id/serum_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serum"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serum_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Moisturizer Section -->
            <TextView
                android:id="@+id/moisturizer_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moisturizer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moisturizer_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Sunscreen Section -->
            <TextView
                android:id="@+id/sunscreen_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunscreen"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sunscreen_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Mask Section -->
            <TextView
                android:id="@+id/mask_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mask"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mask_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>